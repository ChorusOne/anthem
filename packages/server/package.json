{
  "name": "@anthem/server",
  "version": "0.0.1",
  "private": true,
  "description": "GraphQL API server for Anthem",
  "author": "Chorus One Team",
  "main": "server.ts",
  "scripts": {
    "setup": "cp sample.env .env",
    "start": "nodemon --exec ts-node --files src/server.ts",
    "prod": "node build/src/server.js",
    "build": "rimraf build && tsc -p . && cp src/schema.graphql build/src",
    "debug": "yarn build && yarn rawkit build/src/server.js --nodemon",
    "prettier": "prettier --list-different './src/**/*.ts'",
    "prettier:fix": "prettier --write './src/**/*.{ts,json}'",
    "tslint": "tslint --project tsconfig.json -c tslint.json",
    "tslint:fix": "tslint --project tsconfig.json -c tslint.json --fix",
    "lint": "yarn prettier && yarn tslint",
    "format": "yarn prettier:fix && yarn tslint:fix",
    "tsc": "tsc",
    "test": "yarn lint && yarn tsc && yarn test:unit",
    "test:unit": "jest",
    "test:watch": "jest --watchAll",
    "jest:clear": "jest --clearCache",
    "schema:update": "ts-node scripts/write-resolver-keys.ts && yarn format",
    "recording": "RECORD_CLIENT_DATA=true yarn start",
    "fetch-price-history": "ts-node scripts/fetch-price-history.ts && yarn format"
  },
  "dependencies": {
    "@anthem/utils": "^0.0.1",
    "a-simple-cache": "^2.0.1",
    "apollo-server-express": "^2.7.2",
    "axios": "^0.21.1",
    "chalk": "^2.4.2",
    "contentful": "^7.15.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-prometheus-middleware": "^0.8.5",
    "getenv": "^0.7.0",
    "graphql": "^14.4.2",
    "moment-timezone": "^0.5.28",
    "ncp": "^2.0.0",
    "node-fetch": "^2.6.1",
    "pg": "^7.17.1",
    "ramda": "^0.26.1",
    "sqlite": "^4.0.14",
    "sqlite3": "^5.0.0",
    "sqlstring": "^2.3.1",
    "typescript": "^3.7.4"
  },
  "devDependencies": {
    "@sentry/node": "5.6.1",
    "@types/bech32": "^1.1.1",
    "@types/compression": "^0.0.36",
    "@types/express": "^4.17.0",
    "@types/getenv": "^0.7.0",
    "@types/graphql": "^14.2.3",
    "@types/graphql-depth-limit": "^1.1.0",
    "@types/jest": "^24.0.15",
    "@types/moment-timezone": "^0.5.13",
    "@types/node": "^12.6.8",
    "@types/pg": "^7.14.1",
    "@types/ramda": "^0.26.18",
    "@types/sqlstring": "^2.2.1",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^0.7.1",
    "graphql-import-node": "^0.0.4",
    "jest": "24.7.1",
    "nodemon": "^1.19.1",
    "prettier": "1.19.1",
    "rawkit": "^1.5.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "5.20.1"
  }
}
